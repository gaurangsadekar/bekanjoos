{
    "name": "BeKanjoos",
    "version": "0.0.1",
    "description": "Track your favorite producs online",
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "content_scripts": [{
        "matches": ["http://www.flipkart.com/*", "http://localhost:5000/*", 
                    "http://www.ebay.com/*", "http://www.walmart.com/*", "http://www.target.com/*",
                    "http://www.bestbuy.com/*", "http://www.amazon.com/*"],
        "js": ["lib/jquery-2.1.4.min.js", "js/content-script.js"]
    }],
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [ 
        "tabs",
        "activeTab",
        "background",
        "http://localhost:9000/",
        "http://ec2-54-236-125-44.compute-1.amazonaws.com/",
        "https://connect.facebook.net/en_US/sdk.js"
    ],
    "manifest_version": 2
}
